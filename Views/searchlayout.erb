                    </div>
                </nav>
            </header>
            <section id="search-view-alt">
                <div id="the-search-alt">
                    <form action="/searchapi" method="post">
                        <input type="text" name="id" placeholder="Search by treat...">
                        <select name="pick_an_option">
                            <option value="quick_search">Random Recipes</option>
                            <option value="by_treat">By Treat</option>
                            <option value="by_ingredient">By Ingredient</option>
                        </select>
                        <input id="go-button" type="submit" value="&#x1F50D;">
                    </form>
                </div>
            </section>
                <%= yield %>
            <footer>
                <h1 class="logo-font">Baked</h1>
                <div id="socials">
                    <img class="social-icon" src="images/insta.png">
                    <img class="social-icon" src="images/fb.png">
                    <img class="social-icon" src="images/twitter.png">
                </div>
                <div id="final-notes">
